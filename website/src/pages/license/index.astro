---
import BaseLayout from '@layouts/BaseLayout.astro';

const githubLicenseUrl = 'https://github.com/wikilangs/wikilangs/blob/main/LICENSE';
---

<BaseLayout
  title="License"
  description="WikiLangs is released under the MIT License. Free for academic and commercial use."
>
  <section class="license-hero">
    <div class="container">
      <h1>License</h1>
      <p class="hero-subtitle">
        WikiLangs is fully open source and free to use.
      </p>
    </div>
  </section>

  <section class="license-section">
    <div class="container">
      <div class="license-card">
        <div class="license-badge">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="48" height="48">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          <span>MIT License</span>
        </div>

        <div class="license-content">
          <p>
            WikiLangs is released under the <strong>MIT License</strong>, one of the most permissive
            open source licenses available. This means you can:
          </p>

          <div class="permissions-grid">
            <div class="permission-item allowed">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>Use commercially</span>
            </div>
            <div class="permission-item allowed">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>Modify the code</span>
            </div>
            <div class="permission-item allowed">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>Distribute copies</span>
            </div>
            <div class="permission-item allowed">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>Use privately</span>
            </div>
            <div class="permission-item allowed">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>Sublicense</span>
            </div>
          </div>

          <p class="license-note">
            The only requirement is that you include the original copyright notice and license
            text in any copy of the software or substantial portions of it.
          </p>

          <div class="license-actions">
            <a href={githubLicenseUrl} class="btn btn-primary" target="_blank" rel="noopener">
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View Full License on GitHub
            </a>
          </div>
        </div>
      </div>

      <div class="license-applies">
        <h2>What's Covered</h2>
        <div class="covered-grid">
          <div class="covered-item">
            <strong>Source Code</strong>
            <p>All Python code, scripts, and tools in the WikiLangs repository</p>
          </div>
          <div class="covered-item">
            <strong>Pre-trained Models</strong>
            <p>Tokenizers, n-gram models, Markov chains, vocabularies, and embeddings</p>
          </div>
          <div class="covered-item">
            <strong>Documentation</strong>
            <p>Research reports, model cards, and technical documentation</p>
          </div>
          <div class="covered-item">
            <strong>Website</strong>
            <p>This website's source code and components</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .license-hero {
    padding: var(--space-12) 0;
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    text-align: center;
  }

  .license-hero h1 {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-4);
  }

  .hero-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
  }

  .license-section {
    padding: var(--space-12) 0;
  }

  .license-card {
    max-width: 700px;
    margin: 0 auto var(--space-12);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .license-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    padding: var(--space-6);
    background: var(--color-accent-light);
    color: var(--color-accent-dark);
  }

  .license-badge span {
    font-size: var(--font-size-2xl);
    font-weight: 700;
  }

  .license-content {
    padding: var(--space-6);
  }

  .license-content p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-6);
  }

  .permissions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }

  .permission-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3);
    background: var(--color-bg);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
  }

  .permission-item.allowed {
    color: var(--color-success, #10b981);
  }

  .permission-item.allowed svg {
    flex-shrink: 0;
  }

  .license-note {
    padding: var(--space-4);
    background: var(--color-bg);
    border-left: 3px solid var(--color-accent);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
  }

  .license-actions {
    margin-top: var(--space-6);
    text-align: center;
  }

  .license-actions .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .license-applies {
    max-width: 700px;
    margin: 0 auto;
  }

  .license-applies h2 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-6);
    text-align: center;
  }

  .covered-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
  }

  .covered-item {
    padding: var(--space-4);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
  }

  .covered-item strong {
    display: block;
    margin-bottom: var(--space-2);
    color: var(--color-text);
  }

  .covered-item p {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 640px) {
    .covered-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
