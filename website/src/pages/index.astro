---
import BaseLayout from '@layouts/BaseLayout.astro';
import LanguageCard from '@components/LanguageCard.astro';
import CodeBlock from '@components/CodeBlock.astro';
import WorldMap from '@components/WorldMap.astro';
import { getAllLanguages, getGlobalStats, formatNumber } from '@lib/languages';

const allLanguages = getAllLanguages();
const stats = getGlobalStats();

// Get languages with models for random selection
const languagesWithModels = allLanguages.filter(l => l.has_models);

// Use hour of day as seed for stable random selection (changes hourly)
const hourSeed = new Date().getUTCHours();
function seededShuffle<T>(array: T[], seed: number): T[] {
  const result = [...array];
  let m = result.length;
  while (m) {
    const i = Math.floor((seed * 9301 + 49297) % 233280 / 233280 * m--);
    seed = (seed * 9301 + 49297) % 233280;
    [result[m], result[i]] = [result[i], result[m]];
  }
  return result;
}

// Randomly select 12 featured languages based on hour
const featuredLanguages = seededShuffle(languagesWithModels, hourSeed).slice(0, 12);
